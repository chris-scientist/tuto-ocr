{# app/Resources/views/layout.html.twig #}

<!DOCTYPE html>
<html>
    <head>
        <title>{% block title %}Plateforme T{% endblock %}</title>
    </head>
    <body>
        <h1>
            Plateforme T
            <span style="font-size:12px;" >
                {% if not(app.user is null) %}
                    Bonjour {{ app.user.username }} |
                    <a href="{{ url('logout') }}" >Se déconnecter</a>
                {% else %}
                    <a href="{{ url('login') }}" >Se connecter</a>
                {% endif %}
            </span>
        </h1>
        
        {% block body %}
        {% endblock %}
        
        <p>
            {% block footer %}
                Page réalisée par {{ webmaster }}.
            {% endblock %}
        </p>
    </body>
</html>